<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>

<main>
    <div class="grid" method="POST">
        <%
        for (var i = 0; i < prodData.length; i++) {
        %>
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">
                    <%=prodData[i].title%>
                </h1>
            </header>
            <div class="card__image">
                <img src="<%=prodData[i].image%>" width="50" height="150" alt="apple">
            </div>
            <div class="card__content" >
                <h2 class="product__price">Price: <%=prodData[i].price%>
                </h2>
                <p class="product__description">
                    Quantity: <%=prodData[i].quantity%>
                </p>
            </div>

            <form action="/prods" method="POST">
                <button class="btn" type="submit" >Add to Cart</button>
                <input type = "hidden" name="product_id" value="<%=prodData[i].id%>">
            </form>
        </article>
        <%}%>
    </div>
</main>
<%- include('./includes/end.ejs') %>