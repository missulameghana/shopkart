<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('./includes/navigation.ejs') %>

<main>
    <h2>Credits availabe: <%=cartCredits[0].credit%></h2>
    <form action="http://localhost:3000/orders" method="post">
        <button type="submit">Buy</button>
    </form>
    <div class="grid">
        <%
        for (var i = 0; i < cartData.length; i++) {
        %>
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">
                    <%=cartData[i].title%>
                </h1>
            </header>
            <div class="card__image">
                <img src="<%=cartData[i].image%>" width="50" height="150" alt="apple">
            </div>
            <div class="card__content">
                <h2 class="product__price">$ <%=cartData[i].price%>
                </h2>
                <p class="product__description">
                    Qt Ord: <%=cartData[i].quantity%>
                </p>
            </div>
            <button class="btn" type="submit">Add to Cart</button>
        </article>
        <%}%>
    </div>
</main>
<%- include('./includes/end.ejs') %>